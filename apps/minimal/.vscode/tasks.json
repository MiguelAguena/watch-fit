{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - ESP-IDF",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clean - ESP-IDF",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "fullclean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Flash - ESP-IDF",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "flash"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build - ESP-IDF",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Monitor - ESP-IDF",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "monitor"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Flash and Monitor - ESP-IDF",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "flash",
                "monitor"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "isBackground": true,
            "dependsOn": "Build - ESP-IDF",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build for Debug - ESP-IDF",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "IDF_DEBUG": "1"
                }
            }
        },
        {
            "label": "OpenOCD - ESP32-C6",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/esp_usb_jtag.cfg",
                "-f",
                "target/esp32c6.cfg"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "problemMatcher": {
                "owner": "openocd",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}